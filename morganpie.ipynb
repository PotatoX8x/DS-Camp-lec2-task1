   "source": [
    "import numpy as np\n",
    "\n",
    "k = 1000\n",
    "a = np.random.default_rng().uniform(-1.0, 1.0, (k, 2))\n",
    "n = 0\n",
    "for x, y in a:\n",
    "    if (x * x + y * y <= 1):\n",
    "        n += 1\n",
    "print(f'Number of dots inside of a circle: {n} | Pi = {n/k*4}')"
   ]
  }
